<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/rl"
    android:background="@color/white"


    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:text="GPA CALCULATOR"
        android:textSize="50px"
        android:layout_marginTop="25px"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="125px"
        android:layout_marginLeft="400px"
        android:text="GRADE 1: "
        android:textSize="40px"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GRADE 2: "
        android:textSize="40px"
        android:layout_marginTop="300px"
        android:layout_marginLeft="400px"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GRADE 3: "
        android:textSize="40px"
        android:layout_marginTop="125px"
        android:layout_marginLeft="1000px"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GRADE 4: "
        android:textSize="40px"
        android:layout_marginTop="300px"
        android:layout_marginLeft="1000px"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GRADE 5: "
        android:textSize="40px"
        android:layout_marginTop="450px"
        android:layout_marginLeft="600px"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GPA:"
        android:textSize="40px"
        android:layout_marginTop="600px"
        android:layout_marginLeft="600px"
        android:textStyle="bold"/>
    <EditText
        android:layout_width="300px"
        android:layout_height="120px"
        android:textSize="40px"
        android:textStyle="bold"
        android:id="@+id/g1"
        android:layout_marginTop="100px"
        android:layout_marginLeft="600px"/>
    <EditText
        android:layout_width="300px"
        android:layout_height="120px"
        android:textSize="40px"
        android:textStyle="bold"
        android:id="@+id/g2"
        android:layout_marginTop="275px"
        android:layout_marginLeft="600px"/>
    <EditText
        android:layout_width="300px"
        android:layout_height="120px"
        android:textSize="40px"
        android:textStyle="bold"
        android:id="@+id/g3"
        android:layout_marginTop="100px"
        android:layout_marginLeft="1200px"/>
    <EditText
        android:layout_width="300px"
        android:layout_height="120px"
        android:textSize="40px"
        android:textStyle="bold"
        android:id="@+id/g4"
        android:layout_marginTop="275px"
        android:layout_marginLeft="1200px"/>
    <EditText
        android:layout_width="300px"
        android:layout_height="120px"
        android:textSize="40px"
        android:textStyle="bold"
        android:id="@+id/g5"
        android:layout_marginTop="425px"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/total"
        android:layout_width="181dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="575px"
        android:textSize="43px"
        android:gravity="center"
        android:textStyle="bold" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Compute GPA"
        android:textSize="40px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="700px"
        android:id="@+id/compute"/>

</RelativeLayout>